{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Vitests */
    "types": [
      "vitest/globals",
      "@types/react-dom"
    ],
    /* Paths */
    "baseUrl": "src",
    "paths": {
      "app/*": [
        "app/*"
      ],
      "pages/*": [
        "pages/*"
      ],
      "utils/*": [
        "utils/*"
      ],
      "tests/*": [
        "tests/*"
      ],
      "widgets/*": [
        "widgets/*"
      ],
      "shared/*": [
        "shared/*"
      ]
    }
  },
  "include": [
    "vite.config.ts",
    ".eslintrc.cjs",
    "src",
    "setupTests.ts",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}